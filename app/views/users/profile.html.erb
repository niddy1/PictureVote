<!-- poll creation form -->
<div class="row">
  <form class="poll-create" action="/polls" method="post">
    <select class="image-picker show-html" data-limit="2" multiple="multiple" name="poll[]">
      <% @user.pictures.each do |picture| %>
        <%=picture.id%>
        <option data-img-src="<%= picture.url %>" value="<%=picture.id%>"><%=picture.id%></option>
      <% end %>
    </select>
    <input type="hidden" name="user[id]" value="<%=@user.id%>">
    <button class="btn waves-effect waves-light" type="submit" name="action">Create Poll</button>
  </form>
</div>



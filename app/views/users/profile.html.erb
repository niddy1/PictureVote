        <form class="picture-maker" action="/api/pictures" method="post">
        <input type="file" id="url" >
        <!-- <h5>Description</h5><input type="text" id="description"> -->
        <button class="btn-floating btn-medium waves-effect waves-light #26A69A picture-submit" type="submit" name="action"><i class="material-icons right">add</i>
        </button>
        </form>
    </div>
</div>




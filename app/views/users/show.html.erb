<input type="hidden" id="api-token" value="<%=@user.token%>">
<h3 class="show-header">My polls</h3>

<%@polls.each do |po|%>
<!-- <li>User ID: <%=po.user_id%></li>
<li>--Poll ID:<%=po.id%>--</li>
<li>image: <%=po.picture_1_id%> vs. image: <%=po.picture_2_id%></li> -->
<div class="poll-display" id="<%=po.id%>">

  <li class="show-votes-above"><%= po.picture_1_votes%> votes
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    <%= po.picture_2_votes%> votes</li>
  <li class="show-display row">
    <p class="show-display-text1">
      <!-- shows voting %s accounts for NaN-->
      <%if (  ( ( po.picture_1_votes.to_f / (po.picture_1_votes.to_f+ po.picture_2_votes.to_f) ) * 100).round(2)  ) >= 0 %>
        <%=( ( po.picture_1_votes.to_f / (po.picture_1_votes.to_f+ po.picture_2_votes.to_f) ) * 100).round(2)%>%
      <%else%>
        <%="0.0%"%>
      <%end%>
      <br><br><br>
    </p>
    <img class="poll-show" src="<%=@pictures[po.picture_1_id - 1].url%> " alt="" />
    <p class="show-display-text2">
      vs.
      <br><br><br>
    </p>
    <img class="poll-show" src="<%=@pictures[po.picture_2_id - 1].url%> " alt="" />
    <p class="show-display-text2">
      <!-- shows voting %s accounts for NaN-->
        <%if (  ( ( po.picture_2_votes.to_f / (po.picture_1_votes.to_f+ po.picture_2_votes.to_f) ) * 100).round(2)  ) >= 0 %>
          <%=( ( po.picture_2_votes.to_f / (po.picture_1_votes.to_f+ po.picture_2_votes.to_f) ) * 100).round(2)%>%
        <%else%>
          <%="0.0%"%>
        <%end%>

      <br><br><br>
    </p>

  </li>
  <button type="button" class="remove-poll waves-effect waves-light btn-floating red">X</button>
  <br>

</div>

